{
  "name": "acp-photo-phase0",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist logs .vitest",
    "start:agent": "node dist/cmd/photo-agent.js",
    "start:client": "node dist/cmd/photo-client.js --agent node --agentArgs dist/cmd/photo-agent.js --cwd .",
    "start:mcp": "node dist/cmd/mcp-image-server.js",
    "interactive": "node dist/cmd/photo-client.js --agent node --agentArgs dist/cmd/photo-agent.js --cwd . --interactive",
    "demo": "node dist/cmd/photo-client.js --agent node --agentArgs dist/cmd/photo-agent.js --cwd . --demo ping",
    "demo:image": "node dist/cmd/photo-client.js --agent node --agentArgs dist/cmd/photo-agent.js --cwd . --interactive",
    "test": "vitest run",
    "pretest": "npm run build"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.7.4",
    "dotenv": "^17.2.1",
    "minimist": "^1.2.8",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "sharp": "^0.34.3",
    "zod": "^4.1.5"
  }
}
